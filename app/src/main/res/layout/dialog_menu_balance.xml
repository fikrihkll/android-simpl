<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_add_wallet_dl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_add_wallet_dl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_add_wallet_dl"
        app:srcCompat="@drawable/ic_baseline_account_balance_wallet_24"
        app:tint="?titleStaticColor" />

    <TextView
        android:id="@+id/tv_add_wallet_dl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:text="Add Wallet"
        android:textColor="?titleStaticColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_add_bank_dl"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_bank_dl" />

    <ImageView
        android:id="@+id/iv_add_bank_dl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_add_bank_dl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_add_bank_dl"
        app:srcCompat="@drawable/ic_baseline_account_balance_24"
        app:tint="?titleStaticColor" />

    <TextView
        android:id="@+id/tv_add_bank_dl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:text="Add Bank Account"
        android:textColor="?titleStaticColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_add_bank_dl"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>